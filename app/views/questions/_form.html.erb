<div class="row">
    <div class="pad">
      <%= form_for question, url: url, remote: true do |f| %>
        <%= f.text_area :content, class:"textarea", placeholder: placeholder,
            style: "width: 100%; height: 200px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;" %>

        <%= f.check_box :anonymous %>
        <span class="option", style="font-size: 0.8em;">
          Anonymous
        </span>

        <%= button_tag(type: "submit", class: "btn pull-right") do %>
            <i class="fa fa-save"></i>
        <% end %>
      <% end %>
  </div>
  <div class="input-group margin">
    <div class="input-group-btn">
      <% if question.valid? %>
        <%= button_to "Delete Room", question_path(question), class: "btn btn-flat btn-danger", data: { confirm: "Hmmm! Are you sure?" }, method: :delete %>
      <% end %>
    </div>
  </div>
</div>
